<main>

    <section>
        <div class="relative pt-16 pb-32 flex content-center items-center justify-center" style="min-height: 70vh;">
            <div class="absolute top-0 w-full h-full bg-gray-900 pattern-carre"></div>
            <div class="container relative mx-auto">
                <div class="items-center flex flex-wrap">
                    <div class="w-full lg:w-6/12 mx-auto px-4 text-center">
                        <div data-aos="fade-up" data-aos-duration="600">
                            <% if(projectData.identity[0].logo[0].enable == true) { %>
                                <img src="../<%= projectData.identity[0].logo[0].path %>" class="mx-auto my-10" alt="Logo du projet" width="64">    
                            <% } %>
                            
                            <h1 class="text-white font-semibold text-4xl"><%= projectData.identity[0].fullname %></h1>
                            <h2 class="text-gray-600 text-1xl">Crée le <%= projectData.informations[0].release_date %>. Dernière modification le <%= projectData.informations[0].last_edit_date %></h2>
                        </div>
                    </div>
                </div>

                <div class="bg-gray-200 mx-auto p-3 md:w-1/2 rounded mt-20 flex justify-between" data-aos="fade-up" data-aos-duration="600">
                    <p><%= projectData.informations[0].navbar[0].description %></p>
                    <div>
                        <% if(projectData.informations[0].navbar[0].external_url) { %>
                            <a href="<%= projectData.informations[0].navbar[0].external_url_path %>" class="link primary-link" target="blank"> <i class="fa fa-link"></i> </a>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
    </section>
    

    <section class="container mx-auto" data-aos="fade-right" data-aos-once="true" data-aos-duration="700">

        <div class="flex flex-wrap my-8 mx-auto px-4">
            <div class="w-full md:w-8/12 mx-auto">
                <div class="md:pr-12 mt-5">
                    <h2 class="text-gray-800 text-3xl font-bold"><%= projectData.identity[0].fullname %></h2>
                    <ul class="my-3">
                        <% let url_hashtag = '' %>
                        <% for (let key in projectData.informations[0].tags) { %>
                            <% url_hashtag += `%20%23${projectData.informations[0].tags[key]}` %>
                            <li class="mr-1 mb-2 md:inline-block xs:block">
                                <span class="bg-gray-200 rounded px-3 py-1 text-sm font-semibold text-gray-700 mr-2">#<%= projectData.informations[0].tags[key] %></span>
                            </li>
                        <% } %>
                    </ul>
                    <p class="mt-4 text-lg text-justify text-gray-600"><%= projectData.informations[0].description[0].text %></p>
                </div>
            </div>

            <div class="w-full md:w-4/12 mx-auto mt-8 sm:mt-6 md:mt-0">
                <div class="max-w-sm rounded overflow-hidden shadow-lg">
                    <div class="px-6 py-4 mb-5">
                        <div class="font-bold text-xl mb-2">Informations sur le projet</div>
                        <% for (let key in projectData.informations[0].card) { %>
                            <p> 
                                <span class="text-gray-900"><%= projectData.informations[0].card[key].title %> :</span> 
                                <span class="text-gray-600"><%= projectData.informations[0].card[key].data %></span>
                            </p>
                        <% } %>
                    </div>
                    <hr class="border border-gray-200 w-5/6 mx-auto mb-5">
                    <div>
                        <div class="font-bold text-md my-2 text-center">Partager</div>
                        <ul class="px-6 py-4 my-3 text-left md:text-center">
                            <li class="mr-1 mb-2 inline-block">
                                <a href="http://www.linkedin.com/shareArticle?mini=true&url=<%- projectData.informations[0].shared_url %>&title=D%C3%A9couvrez%20<%- projectData.identity[0].fullname %>%20%F0%9F%8E%89%20<%- url_hashtag %>" target="blank" class="bg-gray-200 rounded px-3 py-1 text-sm font-semibold text-gray-700 mr-2"><i class="fa fa-linkedin"></i></a>
                            </li>
                            <li class="mr-1 mb-2 inline-block">
                                <a href="https://twitter.com/intent/tweet?url=<%- projectData.informations[0].shared_url %>&text=D%C3%A9couvrez%20<%- projectData.identity[0].fullname %>%20%F0%9F%8E%89%20<%- url_hashtag %>" target="blank" class="bg-gray-200 rounded px-3 py-1 text-sm font-semibold text-gray-700 mr-2"><i class="fa fa-twitter"></i></a>
                            </li>
                            <li class="mr-1 mb-2 inline-block">
                                <a href="https://www.facebook.com/sharer/sharer.php?u=<%- projectData.informations[0].shared_url %>" target="blank" class="bg-gray-200 rounded px-3 py-1 text-sm font-semibold text-gray-700 mr-2"><i class="fa fa-facebook-square"></i></a>
                            </li>
                            <li class="mr-1 mb-2 inline-block">
                                <a href="http://pinterest.com/pin/create/button/?url=<%- projectData.informations[0].shared_url %>&media=https%3A%2F%2Fmikhaelbailly.fr%2Fimages%2Fo%2Faccount_banner.jpg&description=D%C3%A9couvrez%20<%- projectData.identity[0].fullname %>%20%F0%9F%8E%89%20<%- url_hashtag %>" target="blank" class="bg-gray-200 rounded px-3 py-1 text-sm font-semibold text-gray-700 mr-2"><i class="fa fa-pinterest"></i></a>
                            </li>
                            <li class="mr-1 mb-2 inline-block">
                                <a href="mailto:?subject=Découvrez le projet <%= projectData.identity[0].fullname %>&body=<%- projectData.informations[0].shared_url %>" target="blank" class="bg-gray-200 rounded px-3 py-1 text-sm font-semibold text-gray-700 mr-2"><i class="fa fa-envelope"></i></a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </section>



    <% if(projectData.components.includes('missions')) { %>
        <section class="container mx-auto px-4 mt-20" data-aos="fade-right" data-aos-once="true" data-aos-duration="700">
            <h2 class="text-gray-800 text-5xl title-lg-shadow font-bold">Missions</h2>

            <div class="pt-5">
                <div class="mt-3">
                    <ul class="md:grid md:grid-cols-1 md:col-gap-8 md:row-gap-10">
                        <% for (let key in projectData.missions) { %>
                            <li class="flex mb-3">
                                <div class="flex-shrink-0">
                                    <div class="flex items-center justify-center h-12 w-12 rounded-md bg-gray-300 text-gray-700">
                                        <i class="fa fa-bookmark"></i>
                                    </div>
                                </div>
                                <div class="ml-4">
                                    <h5 class="text-lg font-medium text-gray-900"><%= projectData.missions[key].title %></h5>
                                    <p class="text-base text-gray-500"><%= projectData.missions[key].data %></p>
                                </div>
                            </li>
                        <% } %>
                    </ul>
                </div>
            </div>
        </section>
    <% } %>



    <% if(projectData.components.includes('languages')) { %>
        <section class="container mx-auto px-4 mt-20" data-aos="fade-right" data-aos-once="true" data-aos-duration="700">
            <h2 class="text-gray-800 text-5xl title-lg-shadow font-bold">Languages</h2>

            <div class="pt-5">
                <div class="mt-3">
                    <ul class="md:grid md:grid-cols-1 md:col-gap-8 md:row-gap-10">
                        <% for (let key in projectData.languages) { %>
                            <li class="flex mb-3">
                                <div class="flex-shrink-0">
                                    <div class="flex items-center justify-center h-12 w-12 rounded-md bg-gray-300 text-gray-700">
                                        <i class="fa fa-bookmark"></i>
                                    </div>
                                </div>
                                <div class="ml-4">
                                    <h5 class="text-lg leading-6 font-medium text-gray-900"><%= projectData.languages[key] %></h5>
                                </div>
                            </li>
                        <% } %>
                    </ul>
                </div>
            </div>
        </section>
    <% } %>




    <% if(projectData.components.includes('gallery')) { %>
        <hr class="border border-gray-200 w-4/6 mx-auto my-20">

        <section class="container mx-auto px-4 my-20" data-aos="fade-right" data-aos-once="true" data-aos-duration="700">
            <h2 class="text-gray-800 text-5xl title-lg-shadow font-bold mb-3">Galerie</h2>

            <div class="md:grid md:grid-cols-2 md:col-gap-8 md:row-gap-10">
                <% for (let key in projectData.gallery) { %>
                    <div class="text-center my-5">
                        <a class="image-link rounded mb-2" href="../images/projets/<%= ref %>/gallery/<%= projectData.gallery[key].original_name %>" title="<%= projectData.gallery[key].alt %>"> 
                            <img src="../images/projets/<%= ref %>/gallery/<%= projectData.gallery[key].min_name %>" alt="<%= projectData.gallery[key].alt %>" width="100%"> 
                        </a>
                        <small class="text-md font-medium text-gray-700"><%= projectData.gallery[key].alt %></small>
                    </div>
                <% } %>
            </div>

        </section>
    <% } %>


    <hr class="border border-gray-200 w-4/6 mx-auto my-20">

    <section class="container mx-auto px-4 my-20 text-center" data-aos="fade-right" data-aos-once="true" data-aos-duration="700">
        
        <div class="mb-4">
            <p class="text-gray-800 font-bold">Vous voulez en découvrir plus ?</p>
        </div>
        <div class="mt-10">
            <% if(prevData) { %>
                <a href="<%= prevData.link %>" class="text-gray-600 p-4 mr-2 border rounded"><i class="fa fa-arrow-left"></i> Précédent</a>
            <% } %>
            <% if(nextData) { %>
                <a href="<%= nextData.link %> " class="text-gray-600 p-4 mr-2 border rounded">Suivant <i class="fa fa-arrow-right"></i></a>
            <% } %>
        </div>
    </section>

</main>


<script>
$(document).ready(function() {
    $('.image-link').magnificPopup({type:'image'});
});
</script>